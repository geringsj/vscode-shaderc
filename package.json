{
    "name": "vscode-shaderc",
    "displayName": "Shaderc GLSL Linter",
    "description": "Linting for glsl using shaderc",
    "version": "0.0.1",
    "publisher": "majicDave",
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "keywords": [
        "GLSL",
        "Vertex shader",
        "Fragment shader",
        "Vulkan",
        "OpenGL",
        "WebGL",
        "OpenGL Shading Language"
    ],
    "icon": "icon.png",
    "activationEvents": [
        "onLanguage:glsl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "glsl",
                "aliases": [
                    "GLSL"
                ],
                "extensions": [
                    ".vert",
                    ".frag"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "shaderc lint configuration",
            "properties": {
                "shaderc-lint.glslcPath": {
                    "type": "string",
                    "default": "",
                    "description": "The path to the glslc executable"
                },
                "shaderc-lint.glslcArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Additional arguments for the glslc executable"
                },
                "shaderc-lint.shadercOutputDir": {
                    "type": "string",
                    "default": "",
                    "description": "Output directory for compiled shaders"
                },
                "shaderc-lint.includeSupport": {
                    "type": "boolean",
                    "default": false,
                    "description": "Added support for #include. This treats linker errors generated by files with a missing entry point as a warning only. You will also need to specify a default GLSL version to supress linting errors with included files."
                },
                "shaderc-lint.defaultGLSLVersion": {
                    "type": "string",
                    "default": "",
                    "description": "Passed to glslc with -std=. Assigns the GLSL version. Overwrites #version directives, gives a warning if they don't match."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
