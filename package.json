{
    "name": "vscode-shaderc",
    "displayName": "Shaderc GLSL Linter",
    "description": "Linting for glsl using shaderc",
    "version": "0.2.0",
    "publisher": "majicDave",
    "repository": {
        "type": "git",
        "url": "https://github.com/mjdave/vscode-shaderc"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "keywords": [
        "GLSL",
        "Vertex shader",
        "Fragment shader",
        "Vulkan",
        "SPIRV",
        "shaderc",
        "OpenGL",
        "WebGL",
        "OpenGL Shading Language"
    ],
    "icon": "icon.png",
    "activationEvents": [
        "onLanguage:glsl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "glsl",
                "aliases": [
                    "GLSL"
                ],
                "extensions": [
                    ".vert",
                    ".frag"
                ]
            }
        ],
        "commands": [
            {
                "command": "shaderc-lint.build",
                "title": "Build",
                "category": "shaderc-lint"
            },
            {
                "command": "shaderc-lint.buildAll",
                "title": "Build All",
                "category": "shaderc-lint"
            }
        ],
        
        "keybindings": [
            {
                "command": "shaderc-lint.build",
                "key": "ctrl+b",
                "mac": "cmd+b",
                "when": "resourceLangId == glsl"
            },
            {
                "command": "shaderc-lint.buildAll",
                "key": "ctrl+shift+b",
                "mac": "cmd+shift+b",
                "when": "resourceLangId == glsl"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == glsl",
                    "command": "shaderc-lint.build",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == glsl",
                    "command": "shaderc-lint.buildAll",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "shaderc lint configuration",
            "properties": {
                "shaderc-lint.glslcPath": {
                    "type": "string",
                    "default": "",
                    "description": "The path to the glslc executable"
                },
                "shaderc-lint.glslcArgs": {
                    "type": "string",
                    "default": "",
                    "description": "Additional arguments for the glslc executable"
                },
                "shaderc-lint.shadercOutputDir": {
                    "type": "string",
                    "default": "",
                    "description": "Output directory for compiled shaders"
                },
                "shaderc-lint.buildOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Build and output SPV every time you save a file. If not enabled, you will need to use the Build command to output the compile SPIRV."
                },
                "shaderc-lint.includeSupport": {
                    "type": "boolean",
                    "default": true,
                    "description": "Added support for #include. This treats linker errors generated by files with a missing entry point as a warning only. You will also need to specify a default GLSL version to supress linting errors with included files."
                },
                "shaderc-lint.requireSaveToLint": {
                    "type": "boolean",
                    "default": false,
                    "description": "By default, linting will occur with every text change. Enable this option to only lint when you save the file."
                },
                "shaderc-lint.defaultGLSLVersion": {
                    "type": "string",
                    "default": "",
                    "description": "Passed to glslc with -std=. Assigns the GLSL version. Overwrites #version directives, gives a warning if they don't match."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
